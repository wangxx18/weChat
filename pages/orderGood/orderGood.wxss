.hd-og-good{
  position:relative;
  height:250rpx;
  padding:20rpx;
  width:100%;
  border-bottom:10rpx solid #fafafa;
  box-sizing: border-box;
}
.hd-og-address{
  padding:20rpx;
  font-size:28rpx;
  border-bottom:10rpx solid #fafafa;
}
.hd-og-img{
  position:absolute;
  left:20rpx;
  top:20rpx;
  width:200rpx;
  height:200rpx;
}
.hd-og-img image{
  width:100%;
}
.hd-og-body{
  position:relative;
  margin-left:220rpx;
  height:220rpx;
  font-size:32rpx;
  padding:0 20rpx 0 0;
}
.hd-og-title{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.hd-og-type{
  margin-top:10rpx;
  font-size:26rpx;
  color:#888;
}
.hd-og-price-1{
  position:absolute;
  bottom:20rpx;
  font-size:24rpx;
  color:#ff4695;
}
.hd-og-price-1 span{
  font-size:32rpx;
}

.hd-og-textarea{
  padding:20rpx;
  font-size:32rpx;
}
.hd-og-textarea textarea{
  width:100%;
  padding:20rpx;
  border:1px solid #eee;
  box-sizing: border-box;
}
.hd-og-price-2{
  padding:20rpx 0;
  font-size:36rpx;
  text-align: center;
}
.hd-og-price-2 span{
  color:#ff4695;
}
.hd-og-btn-1{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  color:#fff;
  background:#ff4965;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
}
.hd-og-time-1{
  font-size: 32rpx;
  padding:20rpx;
  border-bottom:1px solid #eee;
}
.hd-og-tbody-1{
  color:#ff4965;
}
.hd-og-tbody-1 view{
  display:inline-block;
  padding:5rpx 30rpx;
  width:140rpx;
  text-align: center;
  margin:10rpx 20rpx 0 0;
  border-radius: 6rpx;
  border:1px solid #ff4965;
}
.hd-og-timeCheck{
  background:#ff4965;
  color:#fff;
}