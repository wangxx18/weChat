  padding:5rpx 30rpx;
  text-align: center;
  margin:10rpx 20rpx 0 0;
  border-radius: 6rpx;
  border:1px solid #ff4965;
  color:#ff4965;
}
.hd-gs-checked-1{
  background:#ff4965;
  color:#fff !important;
}
.hd-gs-pay-1{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height:100rpx;
  background:#ff4965;
  color:#fff;  
}
.hd-index-icon{
  position:absolute;
  left:0;
  top:0;
  width:100rpx;
  height:100rpx;
  text-align: center;
  background:#fefefe;
  color:#888;
  font-size: 22rpx;
}
.hd-index-icon view{
  margin-top:-10rpx;
}
.hd-index-icon image{
  width:50rpx;
  height:50rpx;
  margin-top:10rpx;
}
.hd-gs-paybtn-1{
  color:#fff;
  font-size: 40rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left:100rpx;
}